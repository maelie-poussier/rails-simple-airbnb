<nav class="navbar p-3" style= "background-color: rgb(248, 249, 250)">
  <h5>Simple Airbnb</h5>
</nav>

<div class="map" style="background-image: url('<%= @flat.picture_url %>')"></div>

<div class="container margin-top-negative">

  <div class ="row">
    <div class="col-8">
      <div class="flat-show-card " style= "background-color: #eeeeee">
        <h1><%= @flat.name %></h1>
        <p class="flat-show-address"><%= @flat.adress %></p>
      </div>

      <div class="flat-show-card " style= "background-color: #eeeeee">
        <h3>A bit more about this flat...</h3>
        <p><%= @flat.description %></p>
      </div>
    </div>


      <div class="col-4">
        <div class="flat-show-card p-3" style= "background-color: #eeeeee">
          <h5>Book this place!</h5>
          <form action="">
            <div class="input-group">
              <span class="input-date" id="basic-date">From:</span>
              <input type="text" class="form-control" placeholder="12/10/2017">
            </div>
            <div class="input-group mt-2">
              <span class="input-date" id="basic-date">To:</span>
              <input type="text" class="form-control" placeholder="18/10/2017">
            </div>
            <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
          </form>
        </div>

        <div class="mt-3 p-3" style= "background-color: #eeeeee">
          <h3>Details</h3>
          <i class="fas fa-user-friends"></i><span><%= @flat.number_of_guests %></span>
          <i class="fas fa-euro-sign"></i> <%= @flat.price_per_night %>
        </div>

        <div class="mt-3 p-3" style= "background-color: #eeeeee">
          <h6>Share
            <i class="fab fa-facebook-square"></i>
            <i class="fab fa-twitter-square"></i>
            <i class="fab fa-pinterest-square"></i>
            <i class="fas fa-envelope-square"></i>
          </h6>
        </div>


    </div>
  </div>
</div>

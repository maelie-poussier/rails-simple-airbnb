<div class="container">
  <h1>All our Flats</h1>

  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-4">
      <div class="flat-card" style= "background-color: #eeeeee">
        <div class="card-description">
          <div class="flat-card-title">
            <h4><%= flat.name %></h4>
          </div>
          <p><%= flat.adress %></p>
          <div class="flex">
            <i class="fas fa-user-friends"></i><span><%= flat.number_of_guests %></span>
            <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %>
          </div>
        </div>
        <div style = "background-color: white">
          <%= link_to 'More info', flat_path(flat) %>
          <%= link_to 'Edit', edit_flat_path(flat), class: 'ml-3 text-warning' %>
          <%= link_to "Remove", flat_path(flat),
              method: :delete,
              data: { confirm: "Are you sure?" },
              class: 'ml-3 text-danger'
          %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
